<div class="agregar_imagen">
    <div class="container" style="padding-top: 15%;">
        <div class=" row">
            <div class="col-6 offset-3">
                <h4 style="color: rgb(9, 8, 9); margin-left: 20%; padding-bottom:15px;font-weight:bold;"> Modificar
                    Novedades de la
                    Empresa</h4>
                <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                    <input type="hidden" value="{{novedad.id}}" name="id">
                    <div class="form-group">
                        <label for="" style="color: rgb(254, 251, 251);font-weight:bold;">Titulo</label>
                        <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                    </div>

                    <div class="form-group">
                        <label for="" style="color: rgb(254, 251, 251);font-weight:bold;">Subtitulo</label>
                        <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
                    </div>

                    <div class="form-group">
                        <label for="" style="color: rgb(254, 251, 251);font-weight:bold;">Cuerpo</label>
                        <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}}
                        </textarea>
                    </div>


                    <div class="mb-3 row">
                        <p>
                            <label style="color: rgb(254, 251, 251);font-weight:bold;">imagen: <input type="file" 
                            class="form-control" name= "imagen" id="imagen" /></label>
                        </p>

                        <p> 
                            <label style="color: rgb(254, 251, 251);font-weight:bold;"><input type="checkbox" name="img_delete"
                            id="img_delete" value="1">
                            Eliminar imagen actual?</label>
                            <input type="hidden" name="img_original" value="
                            {{novedad.img_id}}">
                        </p>

                    </div>



                    <button type="submit" class="btn btn-primary"
                        style="margin-bottom: 15px; margin-top: 25px;">Modificar </button>
                </form>
                {{#if error}}

                <p style="color: rgb(243, 237, 237); font-weight:bold;">{{message}}</p>

                {{/if}}

            </div>
        </div>
    </div>


</div>